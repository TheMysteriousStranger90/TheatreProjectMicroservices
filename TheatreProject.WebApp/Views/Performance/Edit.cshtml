@model PerformanceDto
@{
    ViewData["Title"] = "Edit Performance";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="fas fa-edit"></i> Edit Performance</h4>
                    <div class="btn-group">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-arrow-left"></i> Back to Details
                        </a>
                        <a asp-action="Statistics" asp-route-id="@Model.Id" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-chart-bar"></i> Statistics
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <div class="text-center mb-3">
                                    <img src="@Model.ImageUrl" id="currentImage" class="img-fluid rounded" alt="@Model.Name" />
                                </div>
    
                            </div>
                            <div class="col-md-8">
                                <div class="row mb-3">
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label asp-for="Name" class="control-label"></label>
                                            <input asp-for="Name" class="form-control" />
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label asp-for="Status" class="control-label"></label>
                                            <select asp-for="Status" asp-items="Html.GetEnumSelectList<PerformanceStatus>()" class="form-select">
                                            </select>
                                            <span asp-validation-for="Status" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Category" class="control-label"></label>
                                    <select asp-for="Category" asp-items="Html.GetEnumSelectList<TheatreCategory>()" class="form-select">
                                    </select>
                                    <span asp-validation-for="Category" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Description" class="control-label"></label>
                                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ShowDateTime" class="control-label"></label>
                                    <input asp-for="ShowDateTime" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="ShowDateTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="Duration" class="control-label"></label>
                                    <input asp-for="Duration" class="form-control" type="time" />
                                    <span asp-validation-for="Duration" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label asp-for="BasePrice" class="control-label"></label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input asp-for="BasePrice" class="form-control" type="number" step="0.01" />
                                    </div>
                                    <span asp-validation-for="BasePrice" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="TheatreName" class="control-label"></label>
                                    <input asp-for="TheatreName" class="form-control" />
                                    <span asp-validation-for="TheatreName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="City" class="control-label"></label>
                                    <input asp-for="City" class="form-control" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="Address" class="control-label"></label>
                                    <input asp-for="Address" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Capacity" class="control-label"></label>
                                    <input asp-for="Capacity" class="form-control" type="number" />
                                    <span asp-validation-for="Capacity" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="AvailableSeats" class="control-label"></label>
                                    <input asp-for="AvailableSeats" class="form-control" type="number" />
                                    <span asp-validation-for="AvailableSeats" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" value="Update" class="btn btn-primary">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#currentImage').attr('src', e.target.result);
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        $(document).ready(function () {
            // Format the datetime-local input
            var showDateTime = new Date('@Model.ShowDateTime.ToString("s")');
            $('#ShowDateTime').val(showDateTime.toISOString().slice(0,16));

            // Format the duration input
            var duration = '@Model.Duration.ToString(@"hh\:mm")';
            $('#Duration').val(duration);
        });
    </script>
}