@model TheatreProject.WebApp.Models.DTOs.PerformanceDto

@{
    ViewData["Title"] = Model.Name;
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="Search">Performances</a></li>
            <li class="breadcrumb-item active">@Model.Name</li>
        </ol>
    </nav>

    <div class="row g-4">
        <div class="col-md-6">
            <!-- Image with Lightbox -->
            <div class="position-relative">
                <img src="@Model.ImageUrl" class="img-fluid rounded shadow-lg" alt="@Model.Name" 
                     data-bs-toggle="modal" data-bs-target="#imageModal" style="cursor: pointer">
                <div class="position-absolute top-0 end-0 m-3">
                    @if(Model.AvailableSeats == 0)
                    {
                        <span class="badge bg-danger">Sold Out</span>
                    }
                    else if(Model.AvailableSeats < Model.Capacity * 0.2)
                    {
                        <span class="badge bg-warning">Almost Sold Out</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Available</span>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1 class="display-5 mb-0">@Model.Name</h1>
                <div class="text-danger fs-3 fw-bold">@Model.BasePrice.ToString("C")</div>
            </div>

            <!-- Badges -->
            <div class="mb-4">
                <span class="badge bg-dark">@Model.Category</span>
                <span class="badge bg-dark">
                    <i class="far fa-calendar-alt"></i> @Model.ShowDateTime.ToString("dddd, MMM dd, yyyy")
                </span>
                <span class="badge bg-dark">
                    <i class="far fa-clock"></i> @Model.ShowDateTime.ToString("HH:mm")
                </span>
            </div>

            <!-- Description -->
            <div class="card bg-light mb-4">
                <div class="card-body">
                    <p class="lead mb-0">@Model.Description</p>
                </div>
            </div>

            <!-- Details Grid -->
            <div class="row g-3 mb-4">
                <div class="col-sm-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <h5><i class="fas fa-theater-masks text-danger"></i> Theatre</h5>
                            <p class="mb-0">@Model.TheatreName</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <h5><i class="fas fa-map-marker-alt text-danger"></i> Location</h5>
                            <p class="mb-0">@Model.Address<br/>@Model.City</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <h5><i class="fas fa-clock text-danger"></i> Duration</h5>
                            <p class="mb-0">@Model.Duration.ToString(@"hh\:mm") hours</p>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <h5><i class="fas fa-chair text-danger"></i> Seating</h5>
                            <div class="progress mb-2">
                                <div class="progress-bar bg-danger" role="progressbar" 
                                     style="width: @(((Model.Capacity - Model.AvailableSeats) * 100) / Model.Capacity)%">
                                </div>
                            </div>
                            <small>@Model.AvailableSeats seats available of @Model.Capacity total</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex gap-2 mb-4">
                @if (User.IsInRole("Administrator"))
                {
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Statistics" asp-route-id="@Model.Id" class="btn btn-outline-dark">
                        <i class="fas fa-chart-bar"></i> Statistics
                    </a>
                }
                <a asp-action="Search" class="btn btn-outline-secondary ms-auto">
                    <i class="fas fa-arrow-left"></i> Back to Search
                </a>
            </div>
            
            <div class="d-flex gap-2">
            </div>
        </div>
    </div>
</div>

<!-- Image Modal -->
<div class="modal fade" id="imageModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body p-0">
                <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add animation on scroll
        AOS.init();
    </script>
}