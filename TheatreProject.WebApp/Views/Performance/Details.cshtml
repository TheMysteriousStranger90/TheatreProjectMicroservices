@model PerformanceDto

@{
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h1 class="mb-4">@Model.Name</h1>
            <div class="mb-4">
                <span class="badge bg-primary">@Model.Category</span>
                <span class="badge bg-info">@Model.ShowDateTime.ToString("MMM dd, yyyy HH:mm")</span>
                <span class="badge bg-success">@Model.BasePrice.ToString("C")</span>
            </div>
            <p class="lead">@Model.Description</p>
            <hr/>
            <div class="row mb-3">
                <div class="col-6">
                    <h5><i class="fas fa-theater-masks"></i> Theatre</h5>
                    <p>@Model.TheatreName</p>
                </div>
                <div class="col-6">
                    <h5><i class="fas fa-map-marker-alt"></i> Location</h5>
                    <p>@Model.Address<br/>@Model.City</p>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-6">
                    <h5><i class="fas fa-clock"></i> Duration</h5>
                    <p>@Model.Duration.ToString(@"hh\:mm")</p>
                </div>
                <div class="col-6">
                    <h5><i class="fas fa-chair"></i> Available Seats</h5>
                    <p>@Model.AvailableSeats of @Model.Capacity</p>
                </div>
            </div>
            @if (User.IsInRole("Administrator"))
            {
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Statistics" asp-route-id="@Model.Id" class="btn btn-info">
                        <i class="fas fa-chart-bar"></i> Statistics
                    </a>
                </div>
            }
        </div>
    </div>
</div>