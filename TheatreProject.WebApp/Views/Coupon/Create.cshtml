@model TheatreProject.WebApp.Models.DTOs.CouponDto

@{
    ViewData["Title"] = "Create Coupon";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0"><i class="fas fa-plus-circle"></i> Create New Coupon</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="CouponCode" class="form-label">Coupon Code</label>
                            <input asp-for="CouponCode" class="form-control" required 
                                   pattern="[A-Za-z0-9]+" title="Only letters and numbers allowed"
                                   style="text-transform: uppercase"/>
                            <span asp-validation-for="CouponCode" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DiscountAmount" class="form-label">Discount Percentage</label>
                            <div class="input-group">
                                <input asp-for="DiscountAmount" class="form-control" type="number" 
                                       min="1" max="100" required />
                                <span class="input-group-text">%</span>
                            </div>
                            <span asp-validation-for="DiscountAmount" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-save"></i> Create Coupon
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            $('input[name="CouponCode"]').on('input', function() {
                this.value = this.value.toUpperCase();
            });
        });
    </script>
}