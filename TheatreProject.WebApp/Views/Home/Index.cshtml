@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero-section position-relative vh-100 d-flex align-items-center" data-aos="fade-up">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6" data-aos="fade-right" data-aos-delay="200">
                <h1 class="display-3 fw-bold mb-4">Experience the Magic of Theatre</h1>
                <p class="lead mb-4">Discover amazing performances, book your tickets, and immerse yourself in the world of art.</p>
                <a asp-controller="Performance" asp-action="Search" class="btn btn-danger btn-lg hover-lift">
                    <i class="fas fa-ticket-alt me-2"></i>Browse Shows
                </a>
            </div>
            <div class="col-lg-6" data-aos="fade-left" data-aos-delay="400">
                
            </div>
        </div>
    </div>
</section>

<!-- Statistics Section -->
<section class="py-5 bg-light" data-aos="fade-up">
    <div class="container">
        <div class="row g-4 text-center">
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="100">
                <div class="display-4 fw-bold text-danger mb-2">
                    <span class="counter">150</span>+
                </div>
                <p class="text-muted">Shows Per Year</p>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="200">
                <div class="display-4 fw-bold text-danger mb-2">
                    <span class="counter">50</span>k+
                </div>
                <p class="text-muted">Happy Viewers</p>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="300">
                <div class="display-4 fw-bold text-danger mb-2">
                    <span class="counter">20</span>+
                </div>
                <p class="text-muted">Theatre Partners</p>
            </div>
            <div class="col-md-3" data-aos="fade-up" data-aos-delay="400">
                <div class="display-4 fw-bold text-danger mb-2">
                    <span class="counter">10</span>+
                </div>
                <p class="text-muted">Years Experience</p>
            </div>
        </div>
    </div>
</section>

<!-- Featured Performances -->
<section class="py-5" data-aos="fade-up">
    <div class="container">
        <h2 class="text-center mb-5">Featured Performances</h2>
        <div class="row g-4">
            @for (int i = 1; i <= 3; i++)
            {
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="@(i * 100)">
                    <div class="card border-0 shadow-sm hover-lift">
                        <img src="/images/performance-@(i).jpg" class="card-img-top" alt="Performance">
                        <div class="card-body">
                            <h5 class="card-title">Featured Show @i</h5>
                            <p class="card-text">Experience the magic of theatre with our carefully selected performances.</p>
                            <a href="#" class="btn btn-outline-danger">Learn More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Testimonials -->
<section class="py-5 bg-light" data-aos="fade-up">
    <div class="container">
        <h2 class="text-center mb-5">What Our Visitors Say</h2>
        <div class="row g-4">
            @for (int i = 1; i <= 3; i++)
            {
                <div class="col-md-4" data-aos="fade-up" data-aos-delay="@(i * 100)">
                    <div class="card border-0 shadow-sm p-4 hover-lift">
                        <div class="text-danger mb-3">
                            <i class="fas fa-quote-left fa-2x"></i>
                        </div>
                        <p class="mb-4">Amazing experience! The performances were incredible and the atmosphere was magical.</p>
                        <div class="d-flex align-items-center">
                            <img src="/images/avatar-@(i).jpg" alt="Avatar" class="rounded-circle" width="50">
                            <div class="ms-3">
                                <h6 class="mb-0">John Doe</h6>
                                <small class="text-muted">Theatre Enthusiast</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="py-5 bg-dark text-white text-center" data-aos="fade-up">
    <div class="container">
        <h2 class="mb-4">Ready to Experience the Magic?</h2>
        <p class="lead mb-4">Book your tickets now and be part of something extraordinary.</p>
        <a asp-controller="Performance" asp-action="Search" class="btn btn-danger btn-lg hover-lift">
            <i class="fas fa-ticket-alt me-2"></i>View All Shows
        </a>
    </div>
</section>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.counterup/1.0.0/jquery.counterup.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>
    
    <script>
        $('.counter').counterUp({
            delay: 10,
            time: 1000
        });
    </script>
}

@section Styles {
    <style>
        .hero-section {
            background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('images/theatre-bg.jpg');
            background-size: cover;
            background-position: center;
            color: white;
            margin-top: -80px;
        }

        .hover-lift {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .hover-lift:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.1) !important;
        }
    </style>
}