@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TheatreProject.WebApp.Models.DTOs.OrderHeaderDto

<div class="container p-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Orders</a></li>
                    <li class="breadcrumb-item active">Order Details</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="card shadow-sm animate-fade-in">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="fas fa-receipt me-2"></i>Order #@Model.Id.ToString().Substring(0, 8)
                </h3>
                <div>
                    @{
                        var statusClass = Model.PaymentStatus ? "success" : "warning";
                        var statusText = Model.PaymentStatus ? "Paid" : "Pending";
                        var statusIcon = Model.PaymentStatus ? "check-circle" : "clock";
                    }
                    <span class="badge bg-@statusClass">
                        <i class="fas fa-@statusIcon me-1"></i>@statusText
                    </span>
                    <button class="btn btn-outline-secondary ms-2" onclick="window.print()">
                        <i class="fas fa-print"></i>
                    </button>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6 border-end">
                    <h5 class="text-muted mb-3">Customer Information</h5>
                    <div class="info-group">
                        <p><i class="fas fa-user me-2"></i><strong>Name:</strong> @Model.FirstName @Model.LastName</p>
                        <p><i class="fas fa-envelope me-2"></i><strong>Email:</strong> @Model.Email</p>
                        <p><i class="fas fa-phone me-2"></i><strong>Phone:</strong> @Model.Phone</p>
                        <p><i class="fas fa-calendar me-2"></i><strong>Order Date:</strong> @Model.OrderTime.ToString("dd/MM/yyyy HH:mm")</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <h5 class="text-muted mb-3">Order Summary</h5>
                    <div class="info-group">
                        <p><i class="fas fa-shopping-cart me-2"></i><strong>Total Items:</strong> @Model.OrderDetails?.Sum(x => x.Quantity)</p>
                        <p><i class="fas fa-money-bill me-2"></i><strong>Subtotal:</strong> $@Model.GrandTotal.ToString("0.00")</p>
                        @if (!string.IsNullOrEmpty(Model.CouponCode))
                        {
                            <p>
                                <i class="fas fa-tag me-2"></i><strong>Coupon Applied:</strong> 
                                <span class="badge bg-info">@Model.CouponCode</span>
                                <span class="ms-2">-$@Model.DiscountTotal.ToString("0.00")</span>
                            </p>
                        }
                        <p class="h4 mt-3">
                            <i class="fas fa-calculator me-2"></i><strong>Final Total:</strong> 
                            <span class="text-success">$@((Model.GrandTotal - Model.DiscountTotal).ToString("0.00"))</span>
                        </p>
                    </div>
                </div>
            </div>

            <h4 class="mb-3"><i class="fas fa-ticket-alt me-2"></i>Tickets</h4>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Performance</th>
                            <th>Ticket Type</th>
                            <th>Seats</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.OrderDetails != null)
                        {
                            @foreach (var item in Model.OrderDetails)
                            {
                                <tr class="align-middle">
                                    <td>@item.PerformanceName</td>
                                    <td><span class="badge bg-secondary">@item.TicketType</span></td>
                                    <td>@item.SeatNumbers</td>
                                    <td>@item.Quantity</td>
                                    <td>$@item.PricePerTicket.ToString("0.00")</td>
                                    <td class="text-success">$@item.SubTotal.ToString("0.00")</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Orders
                </a>
                @if (!Model.PaymentStatus)
                {
                    <form asp-action="CancelOrder" method="post" class="d-inline">
                        <input type="hidden" name="orderId" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Are you sure you want to cancel this order?')">
                            <i class="fas fa-times-circle me-2"></i>Cancel Order
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .animate-fade-in {
        animation: fadeIn 0.5s ease-in;
    }

    .info-group p {
        margin-bottom: 0.5rem;
        padding: 0.5rem;
        border-radius: 0.25rem;
        transition: background-color 0.2s;
    }

    .info-group p:hover {
        background-color: rgba(0,0,0,0.02);
    }

    .table tr {
        transition: transform 0.2s;
    }

    .table tr:hover {
        transform: translateX(5px);
    }
    
    .badge {
        padding: 0.5em 0.8em;
    }
</style>