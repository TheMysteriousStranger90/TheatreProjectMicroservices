@using Microsoft.AspNetCore.Mvc.TagHelpers
@model TheatreProject.WebApp.Models.DTOs.CartDto

<div class="container py-5">
    @if (Model?.CartHeader != null && Model.CartDetails?.Any() == true)
    {
        
        <form method="post">
            <input type="hidden" asp-for="CartHeader.UserId" />
            <input type="hidden" asp-for="CartHeader.Id" />
            <input type="hidden" asp-for="CartHeader.Email" />
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-light d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fas fa-shopping-cart"></i> Shopping Cart
                    </div>
                    <div>
                        <a asp-action="Clear" class="btn btn-outline-danger btn-sm">
                            <i class="fas fa-trash"></i> Clear Cart
                        </a>
                        <a asp-controller="Performance" asp-action="Search" class="btn btn-outline-light btn-sm">
                            <i class="fas fa-ticket-alt"></i> Continue Shopping
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    @foreach (var item in Model.CartDetails)
                    {
                        <div class="row mb-4">
                            <div class="col-md-3">
                                <img src="@item.Performance.ImageUrl" class="img-fluid rounded" alt="@item.Performance.Name"/>
                            </div>
                            <div class="col-md-9">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div>
                                        <h5 class="mb-1">@item.Performance.Name</h5>
                                        <p class="text-muted mb-2">
                                            <i class="far fa-calendar-alt me-2"></i>
                                            @item.Performance.ShowDateTime.ToString("dddd, MMM dd, yyyy HH:mm")
                                        </p>
                                        <p class="mb-2">
                                            <span class="badge bg-primary">@item.TicketType</span>
                                            <span class="badge bg-info ms-2">Seats: @item.SeatNumbers</span>
                                        </p>
                                    </div>
                                    <div class="text-end">
                                        <h5 class="text-danger mb-1">@item.PricePerTicket.ToString("C")</h5>
                                        <p class="text-muted mb-2">Quantity: @item.Quantity</p>
                                        <a asp-action="Remove" asp-route-cartDetailsId="@item.Id" 
                                           class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-trash"></i> Remove
                                        </a>
                                    </div>
                                </div>
                                <hr/>
                                <div class="text-end">
                                    <p class="mb-0">Subtotal: <strong>@item.SubTotal.ToString("C")</strong></p>
                                </div>
                            </div>
                        </div>
                        <hr class="my-4"/>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            @if (!string.IsNullOrEmpty(TempData["Error"]?.ToString()))
                            {
                                <div class="alert alert-danger" role="alert">
                                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                                </div>
                            }
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">Apply Coupon</h6>
                                    <div class="input-group">
                                        <input type="text" class="form-control" name="CouponCode" 
                                               value="@Model.CartHeader.CouponCode"
                                               placeholder="Enter coupon code"/>
                                        <button class="btn btn-outline-primary" type="submit" asp-action="ApplyCoupon">
                                            Apply
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">Order Summary</h6>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Subtotal:</span>
                                        <span>@Model.CartHeader.GrandTotal.ToString("C")</span>
                                    </div>
                                    @if (Model.CartHeader.DiscountTotal > 0)
                                    {
                                        <div class="d-flex justify-content-between mb-2 text-success">
                                            <span>Discount:</span>
                                            <span>-@Model.CartHeader.DiscountTotal.ToString("C")</span>
                                        </div>
                                    }
                                    <hr/>
                                    <div class="d-flex justify-content-between">
                                        <h6 class="mb-0">Total:</h6>
                                        <h6 class="mb-0 text-danger">
                                            @((Model.CartHeader.GrandTotal - Model.CartHeader.DiscountTotal).ToString("C"))
                                        </h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Checkout" class="btn btn-danger shadow-sm">
                            <i class="fas fa-shopping-cart me-2"></i>Proceed to Checkout
                        </a>
                    </div>
                </div>
            </div>
        </form>
    }
    else
    {
        <div class="text-center">
            <img src="/images/empty-cart.svg" alt="Empty Cart" class="mb-4" style="max-width: 200px;"/>
            <h3>Your cart is empty</h3>
            <p class="text-muted">Add some performances to your cart and come back!</p>
            <a asp-controller="Performance" asp-action="Search" class="btn btn-primary">
                <i class="fas fa-ticket-alt me-2"></i>Browse Performances
            </a>
        </div>
    }
</div>