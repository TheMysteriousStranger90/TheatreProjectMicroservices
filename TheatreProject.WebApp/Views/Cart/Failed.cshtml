@{
    ViewData["Title"] = "Payment Failed";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow-sm">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-times-circle text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="card-title text-danger mb-4">Payment Failed</h2>
                    <p class="card-text lead mb-4">
                        We're sorry, but your payment could not be processed at this time.
                        Please try again or contact our support team if the problem persists.
                    </p>
                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                        <a asp-action="Checkout" class="btn btn-primary btn-lg">
                            <i class="fas fa-redo me-2"></i>Try Again
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-home me-2"></i>Return Home
                        </a>
                    </div>
                    <hr class="my-4"/>
                    <small class="text-muted">
                        Need help? <a href="mailto:support@theatre.com">Contact our support team</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>